<config>

    <modules>
        <Jira_Woopra>
            <version>1.0.3</version>
        </Jira_Woopra>
    </modules>

    <global>
        <blocks>
            <woopra>
                <class>Jira_Woopra_Block</class>
            </woopra>
        </blocks>
        <helpers>
            <woopra>
                <class>Jira_Woopra_Helper</class>
            </woopra>
        </helpers>
    </global>

    <frontend>
        <layout>
            <updates>
                <woopra>
                    <file>woopra.xml</file>
                </woopra>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <woopra translate="title" module="woopra">
                                            <title>Woopra</title>
                                        </woopra>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>
